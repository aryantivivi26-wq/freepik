# Telegram Bot
BOT_TOKEN=your_telegram_bot_token
ADMIN_ID=your_telegram_user_id

# MongoDB Atlas
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/ai-bot?retryWrites=true&w=majority

# Redis
REDIS_URL=redis://localhost:6379
# or with password:
# REDIS_URL=redis://:password@host:6379

# Redis password for Docker Compose internal Redis (optional, leave empty for no password)
REDIS_PASSWORD=

# Freepik API
FREEPIK_API_KEY=your_freepik_api_key

# Hubify QRIS Payment
HUBIFY_API_KEY=sk_xxxxxxxxxx
HUBIFY_WEBHOOK_SECRET=your_webhook_secret
HUBIFY_BASE_URL=https://qris.hubify.store/api

# Webhook Server
WEBHOOK_PORT=3001
WEBHOOK_PUBLIC_URL=https://your-domain.com

# File Storage
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# BullMQ
MAX_ACTIVE_JOBS_PER_USER=3
